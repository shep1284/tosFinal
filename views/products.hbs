                        {{/each}}
                    </select>

            <tr><td><select name="input-category-update" id="input-category-update">
                <option value="">Select a Category</option>
                {{#each categories}}
                <option value="{{this.categoryID}}">{{this.category}}</option>
                {{/each}}
                <option>null</option>
            </select>

            <tr><td><input type="submit">

</form>

<script src="./js/update_product.js"></script>

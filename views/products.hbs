                        {{/each}}
                    </select>

            <tr><td><input type="text" name="input-description" id="input-description-update" placeholder="Description">

            <tr><td><select name="input-supplier" id="input-supplier-update">
                        <option>Select a Supplier</option>
                        {{#each suppliers}}


<p>Search by name using the field below. Must be full name.</p>
<form id="search-supplier-html" method="GET" action="/suppliers">
    <label for="input-name">Search by Supplier Name:</label>
    <input type="text" name="name" id="input-name-html-search">

    <input type="submit">
</form>
    <a href="/suppliers"><button>Reset</button></a>

{{!-- Create a table --}}
<table id="supplier-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the given attribute, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.supplierID}}</td>
            <td>{{this.supplierName}}</td>
            <td>{{this.contactName}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phone}}</td>
            <td>{{this.address}}</td>
        </tr>
        {{/each}}
    </tbody>

<div id="insert" style="display: block">
    <form id="add-supplier-form-ajax">
    <legend><strong>Add Supplier</strong></legend>
    <fieldset class="fields">
        <label for="input-name">Supplier Name</label>
        <input type="text" name="input-name" id="input-name">
        <br>

        <label for="input-contact-name">Contact Name</label>
        <input type="text" name="input-contact-name" id="input-contact-name">
        <br>

        <label for="input-email">Email</label>
        <input type="text" name="input-email" id="input-email">
        <br>

        <label for="input-phone">Phone</label>
        <input type="text" name="input-phone" id="input-phone">
        <br>

        <label for="input-address">Address</label>
        <input type="text" name="input-address" id="input-address">
        <br>

        <input type="submit">
    </fieldset>
    </form>
</div>
<script src="./js/add_supplier.js"></script>

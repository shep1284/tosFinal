
{{!-- Create a table --}}
<table id="productsales-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the given attribute, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.productSaleID}}</td>
            <td>{{this.productID}}</td>
            <td>{{this.orderID}}</td>
            <td>{{this.quantitySold}}</td>
            <td>{{this.salePrice}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

    <div id="insert" style="display: block">
    <form id="add-productsales-form-ajax">
        <legend><strong>Add Product Sale</strong></legend>
        <fieldset class="fields">

            <label for="input-productID">Product ID</label>
            <select name="input-productID" id="input-productID">
                <option value="">Select a Product</option>
                {{#each data}}
                <option value="{{this.productID}}">{{this.productID}}</option>
                {{/each}}
            </select>
            <br>

            <label for="input-orderID">Order ID</label>
            <select name="input-orderID" id="input-orderID">
                <option value="">Select an Order</option>
                {{#each data}}
                <option value="{{this.orderID}}">{{this.orderID}}</option>
                {{/each}}
            </select>
            <br>

            <label for="input-quantitySold">Quantity Sold</label>
            <input type="text" name="input-quantitySold" id="input-quantitySold">
            <br>

            <label for="input-salePrice">Sale Price</label>
            <input type="text" name="input-salePrice" id="input-salePrice">
            <br>

            <input type="submit">
        </fieldset>
    </form>
</div>
<script src="./js/add_productsale.js"></script>

{{!-- Create a table --}}
<table id="productsales-table" border=".5" cellpadding="3">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the given attribute, in order --}}
        {{#each data}}
        <tr data-value="{{this.productSaleID}}">
            <td>{{this.productSaleID}}</td>
            <td>{{this.productID}}</td>
            <td>{{this.orderID}}</td>
            <td>{{this.quantitySold}}</td>
            <td>{{this.salePrice}}</td>
            <td><button onclick="deleteProductSale('{{this.productSaleID}}')">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="../js/delete_productsale.js"></script>

<p id="insert" style="display: block" style="margin-bottom:3cm;">
    <form id="add-productsales-form-ajax">
        <legend><strong>Add Product Sale</strong></legend>
        <fieldset class="fields">
            <table>
                {{!-- <label for="input-productID">Product ID</label> --}}
                <tr><td><select name="input-productID" id="input-productID">
                            <option value="">Select a Product</option>
                            {{#each products}}
                            <option value="{{this.productID}}">{{this.productName}}</option>
                            {{/each}}
                            </select>
                            <br>
                {{!-- <label for="input-orderID">Order ID</label> --}}
                <tr><td><select name="input-orderID" id="input-orderID">
                    <option value="">Select an Order</option>
                    {{#each orders}}
                    <option value="{{this.orderID}}">{{this.orderID}}</option>
                    {{/each}}
                    </select>
                    <br>
                <tr><td><input type="number" name="input-quantitySold" id="input-quantitySold" placeholder="Quantity Sold">
                <br>

                <tr><td><input type="number" step="0.01" name="input-salePrice" id="input-salePrice" placeholder="Sale Price">
                <br>

                <tr><td><input type="submit">

            </table>


        </fieldset>
        </form>
<script src="./js/add_productsale.js"></script>

<p id="update" style="display: block" style="margin-bottom:3cm;"></p>
    <form id="update-productsales-form-ajax">
    <legend><strong>Update Product Sale</strong></legend>
    <fieldset class="fields">
        <table>

        <tr><td><select name="input-productsale" id="saleID">
            <option value="default">Select Product Sale ID</option>
            {{#each data}}
            <option value="{{this.productSaleID}}">{{this.productSaleID}}</option>
            {{/each}}
        </select>

        <tr><td><input type="number" name="input-quantity" id="input-quantity-update" placeholder="Quantity Sold">

        <tr><td><input type="number" step="0.01"="input-saleprice" id="input-saleprice-update" placeholder="Sale Price">

        <tr><td><input type="submit">
    </form>

    <script src="./js/update_productsale.js"></script>
